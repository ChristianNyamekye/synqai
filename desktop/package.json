{
  "name": "@synqai/desktop",
  "version": "0.1.0",
  "private": true,
  "main": "dist/main.js",
  "scripts": {
    "dev": "tsc && electron .",
    "build": "tsc && electron-builder",
    "test": "jest"
  },
  "dependencies": {
    "@synqai/shared": "0.1.0",
    "electron-store": "^8.1.0",
    "express": "^4.18.2",
    "sqlite3": "^5.1.7",
    "dockerode": "^4.0.2"
  },
  "devDependencies": {
    "@types/express": "^4.17.21",
    "@types/jest": "^29.5.12",
    "@types/node": "^20.11.19",
    "electron": "^28.2.3",
    "electron-builder": "^24.9.1",
    "jest": "^29.7.0",
    "ts-jest": "^29.1.2",
    "typescript": "^5.3.3"
  },
  "build": {
    "appId": "com.synqai.desktop",
    "mac": {
      "category": "public.app-category.productivity"
    },
    "win": {
      "target": "nsis"
    },
    "linux": {
      "target": "AppImage"
    },
    "files": [
      "dist/**/*",
      "package.json"
    ],
    "extraResources": [
      {
        "from": "dist/preload.js",
        "to": "preload.js"
      }
    ]
  }
}
